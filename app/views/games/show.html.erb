<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @game.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @game.image_url %>
</p>

<% if @user_has_game %>
<button type="button" onclick="purchaseEvent(event)" value="<%=@game.id%>" class="btn btn-primary btn-success">purchase</button>
<% else %>
<button type="button" onclick="purchaseEvent(event)" value="<%=@game.id%>" class="btn btn-primary">purchase</button>
<% end %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
